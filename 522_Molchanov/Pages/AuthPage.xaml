<Page x:Class="_522_Molchanov.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
      Title="AuthPage">

    <Grid HorizontalAlignment="Center"
          Width="800"
          Height="450"
          VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="271*" />
            <ColumnDefinition Width="529*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="217*" />
            <RowDefinition Height="233*" />
        </Grid.RowDefinitions>

        <!-- Лейблы -->
        <Label Content="Логин"
               x:Name="labelLogin"
               Margin="173,130,0,290"
               HorizontalAlignment="Left"
               Width="64"
               Grid.RowSpan="2"
               Style="{StaticResource LabelStyle}" />

        <Label Content="Пароль"
               x:Name="labelPass"
               Margin="173,188,0,232"
               HorizontalAlignment="Left"
               Width="64"
               Grid.RowSpan="2"
               Style="{StaticResource LabelStyle}" />

        <Label Content="Капча:"
               Name="labelCaptcha"
               Visibility="Hidden"
               Margin="178,104,0,87"
               HorizontalAlignment="Left"
               Width="60"
               Style="{StaticResource LabelStyle}" />

        <!-- Текстовые поля -->
        <TextBox x:Name="TextBoxLogin"
                 Background="{DynamicResource TextBoxBackground}"
                 Foreground="{DynamicResource Foreground}"
                 Margin="62,0,0,75"
                 TextWrapping="Wrap"
                 ToolTip="Введите логин или почту"
                 TextChanged="TextBoxLogin_TextChanged"
                 Height="34"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Left"
                 Width="134"
                 Grid.Column="1"
                 Style="{StaticResource TextBoxStyle}" />

        <PasswordBox x:Name="PasswordBox"
                     Background="{DynamicResource TextBoxBackground}"
                     Foreground="{DynamicResource Foreground}"
                     ToolTip="Введите пароль"
                     Margin="0,0,333,0"
                     HorizontalAlignment="Right"
                     Width="134"
                     Height="32"
                     VerticalAlignment="Bottom"
                     Grid.Column="1"
                     PasswordChanged="PasswordBox_PasswordChanged"
                     Style="{StaticResource PasswordBoxStyle}" />

        <TextBox Grid.Column="1"
                 CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                 ContextMenu="{x:Null}"
                 Visibility="Hidden"
                 x:Name="captcha"
                 Height="42"
                 Foreground="Red"
                 FontStyle="Italic"
                 FontWeight="Heavy"
                 VerticalAlignment="Top"
                 Width="156"
                 Background="{x:Null}"
                 FontStretch="UltraCondensed"
                 IsReadOnly="True"
                 HorizontalContentAlignment="Center"
                 HorizontalAlignment="Right"
                 Margin="0,96,322,0"
                 VerticalContentAlignment="Center"
                 FontSize="20"
                 Style="{StaticResource TextBoxStyle}" />

        <TextBox Grid.Column="1"
                 Visibility="Hidden"
                 x:Name="captchaInput"
                 HorizontalAlignment="Left"
                 Height="34"
                 Margin="49,183,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="160"
                 Style="{StaticResource TextBoxStyle}" />

        <!-- Кнопки -->
        <Button x:Name="ButtonEnter"
                Margin="69,20,0,0"
                Height="43"
                Content="Вход"
                ToolTip="Кнопка входа"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Style="{StaticResource ButtonStyle}"
                Click="ButtonEnter_OnClick" />

        <Button x:Name="ButtonReg"
                Margin="69,68,0,0"
                Height="47"
                Content="Регистрация"
                ToolTip="Кнопка регистрации"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Style="{StaticResource ButtonStyle}"
                Click="ButtonReg_Click" />

        <Button x:Name="ButtonChangePassword"
                Margin="69,120,0,0"
                Height="37"
                Content="Смена пароля"
                ToolTip="Кнопка смены пароля"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Style="{StaticResource ButtonStyle}"
                Click="ButtonChangePassword_Click" />

        <Button x:Name="submitCaptcha"
                Margin="69,20,0,0"
                Visibility="Hidden"
                Height="40"
                Content="Подтвердить"
                ToolTip="Подтвердить ввод капчи"
                Grid.Row="1"
                HorizontalAlignment="Left"
                Width="120"
                VerticalAlignment="Top"
                Grid.Column="1"
                Style="{StaticResource ButtonStyle}"
                Click="submitCaptcha_Click" />
    </Grid>
</Page>
