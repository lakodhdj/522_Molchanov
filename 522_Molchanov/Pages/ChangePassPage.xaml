<Page x:Class="_522_Molchanov.ChangePassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:_522_Molchanov"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChangePassPage">

    <Grid Margin="40">
        <!-- Заголовок -->
        <TextBlock Text="Смена пароля"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Основная сетка: метка | поле ввода -->
        <Grid Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- метка -->
                <ColumnDefinition Width="*"/>
                <!-- поле -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <!-- место под кнопку -->
            </Grid.RowDefinitions>

            <!-- 1. Логин -->
            <TextBlock Text="Логин:"
                       Grid.Row="0" Grid.Column="0"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>
            <TextBox x:Name="TbLogin"
                     Grid.Row="0" Grid.Column="1"
                     FontSize="16"
                     Margin="0,0,0,8"
                     Style="{StaticResource TextBoxStyle}"/>

            <!-- 2. Текущий пароль -->
            <TextBlock Text="Текущий пароль:"
                       Grid.Row="1" Grid.Column="0"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>
            <PasswordBox x:Name="CurrentPasswordBox"
                         Grid.Row="1" Grid.Column="1"
                         FontSize="16"
                         Margin="0,0,0,8"
                         Style="{StaticResource PasswordBoxStyle}"/>

            <!-- 3. Новый пароль -->
            <TextBlock Text="Новый пароль:"
                       Grid.Row="2" Grid.Column="0"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>
            <PasswordBox x:Name="NewPasswordBox"
                         Grid.Row="2" Grid.Column="1"
                         FontSize="16"
                         Margin="0,0,0,8"
                         Style="{StaticResource PasswordBoxStyle}"/>

            <!-- 4. Подтверждение -->
            <TextBlock Text="Подтвердите пароль:"
                       Grid.Row="3" Grid.Column="0"
                       FontSize="16"
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Grid.Row="3" Grid.Column="1"
                         FontSize="16"
                         Margin="0,0,0,8"
                         Style="{StaticResource PasswordBoxStyle}"/>

            <!-- Кнопка -->
            <Button Content="Сохранить"
                    Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Width="150" Height="40"
                    HorizontalAlignment="Center"
                    Margin="0,15"
                    Style="{StaticResource ButtonStyle}"
                    Click="ButtonSave_Click"/>
        </Grid>
    </Grid>
</Page>