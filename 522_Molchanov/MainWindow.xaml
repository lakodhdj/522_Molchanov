<Window x:Class="_522_Molchanov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:_522_Molchanov"
        Title="Главное окно"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Grid Background="{DynamicResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5">

            <Button x:Name="btnBack" Content="Назад" Style="{StaticResource ButtonStyle}" Click="btnBack_Click" 
                    Margin="5,0" IsEnabled="False" Padding="15,5" FontSize="14" />

            <Button x:Name="btnThemeToggle" Content="Сменить тему" Style="{StaticResource ButtonStyle}" Click="btnThemeToggle_Click" 
                    Margin="5,0" Padding="15,5" FontSize="14" ToolTip="Переключить тему" />
        </StackPanel>


        <Frame x:Name="MainFrame" Grid.Row="1" Source="pages/AuthPage.xaml" NavigationUIVisibility="Hidden" />

        <TextBlock Grid.Row="2" x:Name="tbDateTimeNow" VerticalAlignment="Center" Text="" HorizontalAlignment="Right" 
                   Style="{StaticResource LinkTextBlockStyle}" Margin="0,0,10,0"/>
    </Grid>
</Window>
