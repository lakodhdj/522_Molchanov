<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Buttons ===== -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#5C4033"/>
    <!-- темно-коричневый -->
    <SolidColorBrush x:Key="ButtonHoverBackground" Color="#6B4F3F"/>
    <!-- чуть светлее -->
    <SolidColorBrush x:Key="ButtonPressedBackground" Color="#492F23"/>
    <!-- темнее при нажатии -->

    <!-- ===== TextBoxes ===== -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#3B2E28"/>
    <!-- тёмный фон для полей -->

    <!-- ===== Page ===== -->
    <SolidColorBrush x:Key="PageBackground" Color="#2B1F1A"/>
    <!-- почти черно-коричневый фон -->

    <!-- ===== Text & Borders ===== -->
    <SolidColorBrush x:Key="Foreground" Color="#E6D7C3"/>
    <!-- светлый бежевый текст -->
    <SolidColorBrush x:Key="BorderBrush" Color="#6B4F3F"/>
    <!-- рамки темнее кнопок -->
    <SolidColorBrush x:Key="HyperlinkForeground" Color="#D9985C"/>
    <!-- светлый оранжево-коричневый -->

</ResourceDictionary>
