<Page x:Class="_522_Molchanov.Pages.UsersTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_522_Molchanov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersTabPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGridUser" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  Grid.Row="0"
                  Margin="10"
                  RowBackground="{DynamicResource TextBoxBackground}"
                  AlternatingRowBackground="{DynamicResource PageBackground}"
                  Foreground="{DynamicResource Foreground}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="100"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="80"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}" Width="200"/>
                <DataGridTextColumn Header="Фото" Binding="{Binding Photo}" Width="150"/>
                <DataGridTemplateColumn Header="Действия" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Редактировать" 
                                    Click="ButtonEdit_Click"
                                    Tag="{Binding}"
                                    Margin="2"
                                    Style="{StaticResource ButtonStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="ButtonAdd" Content="Добавить" Width="100" Margin="5" Click="ButtonAdd_Click"
                    Style="{StaticResource ButtonStyle}"/>
            <Button x:Name="ButtonDel" Content="Удалить" Width="100" Margin="5" Click="ButtonDel_Click"
                    Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
